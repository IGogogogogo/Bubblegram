<%# 之後要做if使用者有限時動態，要出現限時動態。else新增限時動態end %>

<div class="story">
  <%= link_to '新增限時動態', new_user_story_path(current_user) %>

  <% @users.each do |user| %>
    <span>
      <%= link_to user_stories_path(user) do %>
        <%= user.nick_name %>
      <% end %>
    </span>
  <% end %>
</div>

<h1>文章總覽</h1>

<%= link_to '新增文章', new_post_path %>

<table>
  <tr>
    <th>文章</th>
    <th>編輯與刪除</th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td>
      <%= image_tag (post.image.url) %>
      <%= link_to post.body, post_path(post) %>
    <td>
      <%= link_to '編輯', edit_post_path(post) %>
      <%= link_to '刪除', post_path(post), method: 'DELETE', data: { confirm: '你確定刪除嗎?' } %>
    </td>
  </tr>
  <% end %>
</table>
