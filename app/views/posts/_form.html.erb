<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with(model: @post, class: "form", local: true) do |form| %>
  <div class="post-form-img" style="position: relative; width: 400px;">
    <%= image_tag @post.image.url, width: "100%", draggable: false if @post.image.present? %>
  </div>

  <div class="form-group">
    <%= form.label :image, 'image' %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body, '文章內文' %>
    <%= form.rich_text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :taged_users, 'Tag' %>
    <select name="post[taged_users][]" multiple="multiple" class="form-control taged_users">
      <%= options_for_select(@users, @taged_id) %>
    </select>
  </div>

  <%= form.submit '確認' %>
<% end %>
