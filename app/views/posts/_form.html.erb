<% if post.errors.any? %>
  <ul>
    <% post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: post, url: url, class: "form", local: true) do |form| %>
  <div class="post-form-img" style="position: relative;">
    <%#= image_tag post.image.url, width: "100%", draggable: false if post.image.present? %>
  </div>
  <!-- Slider main container -->
  <div class="swiper-container" style="width:100%; max-width:740px;">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper" style=" display: flex; align-items: center;">
      <!-- Slides -->
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination" style="display: none;"></div>
  </div>

  <div class="form-group">
    <%= form.label :image, 'image' %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content, '文章內文' %>
    <%= form.text_area :content, class: "form-control", style: 'border: none; border-bottom: 1px solid #ccc; resize: none;', placeholder: '增加相片說明 ...'%>
  </div>

  <div class="form-group">
    <%= form.label :taged_user_ids, 'Tag' %>
    <select name="post[taged_user_ids][]" multiple="multiple" class="form-control taged_users">
      <%= options_for_select(users, taged_id) %>
    </select>
  </div>

  <%= form.submit '確認' %>
<% end %>
