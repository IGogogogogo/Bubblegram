<div class="search-item" style="display: none;">
  <%= render "./searches/form" %>
</div>

<%= form_with(model: @post, class: "form") do |form| %>
  <div class="post-form-img" style="position: relative; width: 400px; margin: auto; border: solid 5px #faf;">
    <%= image_tag @post.image.url, width: "100%", draggable: false if @post.image.present? %>
  </div>
  <div class="btn btn-primary tag-btn">標記人名</div>


  <div class="form-group">
    <%= form.label :image, 'image' %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body, '文章內文' %>
    <%= form.rich_text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :taged_users, 'Tag' %>
    <select name="post[taged_users][]" multiple="multiple" class="form-control taged_users">
      <%= options_for_select(@users, @taged_id) %>
    </select>
  </div>

  <%= form.submit '確認' %>
<% end %>
