<%= render "shared/navbar" %>
<div class="post-load-page" style="overflow: auto; height: 100vh;">
  <div class="container-fluid container-md">

    <%# 之後要做if使用者有限時動態，要出現限時動態。else新增限時動態end %>
    <div class="story">
      <%#= link_to '新增限時動態', new_user_story_path(current_user) %>
    </div>



    <!-- Main post  -->
    <div class="row justify-content-center">
      <div class="col-12 px-0 pb-3 following-posts post-load-target">

        <!-- limit video -->
        <div
          class="limit-video d-flex justify-content-around align-items-center text-center border-bottom border-gray mb-3">
          <%= render partial: "/stories/story", collection: @results, as: :user %>
        </div>

        <% if @posts !=[] %>
          <%= render partial: "/posts/post", collection: @posts, as: :post %>
        <% else %>
         <div class="default d-flex flex-column align-items-center my-auto">
            <div class="welcome h3 text-black-50">歡迎使用 Bubblegram !</div>
            <img src="no_follow.png" class="w-100" alt="">
            <div class="text h6 text-black-50">追蹤其他人後，可以在這裡看到他們照片與影片！</div>
          </div>
        <% end %>

        <% if @has_more_posts %>
          <%= render "/shared/loading" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
