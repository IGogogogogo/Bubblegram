<div class = "message">
   <div class = "user-avatar">
      <%= image_tag message.user.avatar_url, class: "rounded-circle" %>
   </div>
   <div class="content">
      <div class = "name-with-time">
         <div class = "name">
            <%= message.user.nick_name %>
         </div>
         <div class="time"></div>
      </div>
      <div class="text-content">
         <%= message.content %>
      </div>
   </div>
</div>
