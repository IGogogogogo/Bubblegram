<div class = "chat_user_list section" data-user="<%= current_user.id%>">
  <% if @chats.present? %>
      <% @chats.each do |chat| %>
        <div>
          <%= image_tag chat.opposed_user(current_user).avatar.url, class: "user-avatar", width: "50px", style: "border-radius: 50%" if chat.opposed_user(current_user).avatar.present? %>
          <%= link_to chat.opposed_user(current_user).nick_name, chat_path(chat) %>
          <div class="notice_dot"></div>
        </div>
      <% end %>
    <% end %>
</div>
