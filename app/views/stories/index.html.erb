<h1><%= @user.nick_name %>限時動態總覽</h1>
<%= link_to '新增限時動態', new_user_story_path(current_user) %>

<div class="container-fluid container-md">
  <section class="row">
    <div class="limit-video justify-content-around text-center">

      <header class="user-post px-md-3 d-flex">
        <div class="user-info pb-2 pl-1 d-flex align-items-center">
          <div class="user-photo">
            <%= image_tag @user.avatar.url, class:'rounded-circle align-middle img-fluid' %>
          </div>

          <div class="id-postion pl-2">
            <div class="user-id">
              <strong>
                <%= @user.nick_name %>
              </strong>
            </div>
          </div>

          <div class="carousel-inner">
            <% @stories.each_with_index do |story,index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <span><%= time_ago_in_words(story.created_at) %></span>
            </div>
            <% end %>
          </div>
        </div>

        <div type="button" class="btn btn-dark" id="story_delete">
        刪除
         <%# 用ＪＳ控制這一段，所以先隨便寫 %>
         <%#= link_to '刪除', user_story_path(current_user.id, 1), method: 'DELETE', data:{ confirm: '你確定刪除嗎？' } %>
        </div>
      </header>

      <div>
        <button>
          <%= link_to '回到首頁', root_path %>
        </button>
        <div class="d-flex">
          <%#= image_tag story.picture.url %>
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <% @stories.each_with_index do |story, index| %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<% index == 0 ? 'active' : '' %>"></li>
              <% end %>
            </ol>

            <div class="carousel-inner">
            <% @stories.each_with_index do |story,index| %>
              <div class="story-img carousel-item story_id <%= index == 0 ? 'active' : '' %>"  story_id="<%= story.id %>" >
                <%= image_tag story.picture.url, class: 'd-block w-100' %>
              </div>
              <% end %>
            </div>

            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>

    </div>
  </section>
</div>
