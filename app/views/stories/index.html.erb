<section class="stories" data-user=<%= @user.id %>>
  <div class="header d-flex justify-content-between w-100 px-2">
    <div class="header-info d-flex align-items-center">
      <div class="user-pic pr-2">
        <% if @user == current_user %>
          <%= link_to new_user_story_path(current_user), class:'add-story' do  %>
            <%= image_tag @user.avatar.url, class:'rounded-circle align-middle img-fluid' %>
          <% end %>
        <% else %>
          <%= image_tag @user.avatar.url, class:'rounded-circle align-middle img-fluid' %>
        <% end %>

      </div>

      <div class="member-name pr-2">
        <strong><%= @user.nick_name %></strong>
      </div>

      <!--時間---->
      <% @stories.each_with_index do |story,index| %>
        <div class="member-time story-<%= story.id %>" style="<%= 'display: none' if index != 0 %>"">
          <%= time_ago_in_words(story.created_at) %>
        </div>
      <% end %>
    </div>

    <% if @user == current_user %>
      <button class="header-btn"><i class="fas fa-times"></i></button>
    <% end %>
  </div>

  <div class="story-pic">
    <!-- 以下輪播 -->
    <div id="stories-carousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators mx-0">
        <% @stories.each_with_index do |story, index| %>
          <li data-slide-to="<%= index %>" class="<% index == 0 ? 'active' : '' %>"></li>
        <% end %>
      </ol>

      <div class="carousel-inner">
        <% @stories.each_with_index do |story,index| %>
          <div class="story-img carousel-item story_id <%= index == 0 ? 'active' : '' %>"  data-story="<%= story.id %>" >
            <%= image_tag story.picture.url, class: 'w-100'%>
          </div>
        <% end %>
      </div>

      <a class="carousel-control-prev" href="#stories-carousel" role="button" data-slide="prev">
        <div class="control">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </div>
      </a>

      <a class="carousel-control-next" href="#stories-carousel" role="button" data-slide="next">
        <div class="control">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </div>
      </a>
    </div>
    <!-- 以上輪播 -->
  </div>
</section>
