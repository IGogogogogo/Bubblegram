<div>
  <%= link_to user_path(user), class: "user-link" do %>
    <%= image_tag user.avatar.url, class: "user-avatar", width: "50px", style: "border-radius: 50%" if user.avatar %>
    <span class="user-name"><%= user.nick_name %></span>
    <span class="user-btn">
      <% if user.already_followed?(current_user) %>
        <%= link_to  "取消追蹤", user_follows_path(user), method: :delete %>
      <% else %>
        <%= link_to  "追蹤", user_follows_path(user), method: :post %>
      <% end %>
      <%= link_to  "傳訊息", "#" %>
    </span>
  <% end %>
</div>
