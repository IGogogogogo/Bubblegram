<% if user.already_followed?(current_user) %>
  <%= link_to  "取消追蹤", user_follows_path(user), method: :delete, remote: true, class: "d-block w-100 btn cancel-follow " %>
<% else %>
  <%= link_to  "追蹤", user_follows_path(user), method: :post, remote: true, class: "d-block w-100 btn follow" %>
<% end %>
