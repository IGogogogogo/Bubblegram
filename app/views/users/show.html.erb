<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="profile-info d-flex align-items-center flex-wrap">

        <div class="profile-photo w-25">
          <%= image_tag @user.avatar.url, class: 'rounded-circle w-100' if @user.avatar.present? %>
        </div>

        <div class="posts-count text-center flex-grow-1">
          <div class="num font-weight-bold">
            <%= link_to posts_path, class: 'text-black' do %>
            <div><%= @user.posts_count %></div>
            <div class="post">Posts</div>
            <% end %>
          </div>
        </div>
        <div class="followers-count text-center flex-grow-1">
          <div class="num font-weight-bold">
            <%= link_to posts_path, class: 'text-black' do %>
            <div><%= @user.fans_count %></div>
            <div class="follower">Followers</div>
            <% end %>
          </div>
        </div>
        <div class="following-count text-center flex-grow-1">
          <div class="num font-weight-bold">
            <%= link_to followings_user_path(@user), class: 'text-black' do %>
            <div><%= @user.followings_count %></div>
            <div class="following">Following</div>
            <% end %>
          </div>
        </div>
        <div class="profile-intro py-2 w-100 ml-3">
          <div class="profile-user-name"><strong><%= @user.nick_name %></strong></div>
          <div class="profile-user-infro">
            <%= @user.description %>
          </div>
        </div>
      </div>

      <div class="user-item-<%= @user.id %>">
        <%= render  "user_btn", user: @user  %>
      </div>

      <div class="collection d-flex justify-content-around text-center align-items-center">
        <div class="add-collection-video">
          <i class="fas fa-plus rounded-circle border p-2" style="width: 60px;height: 60px;"></i>
          <small class="d-block">Add</small>
        </div>
        <div class="collection-video1">

          <img src="https://picsum.photos/50/50" alt="" class="img-fluid rounded-circle border p-1">
          <small class="d-block">Highlights</small>
        </div>
        <div class="collection-video2">
          <img src="https://picsum.photos/50/50" alt="" class="img-fluid rounded-circle border p-1">
          <small class="d-block">Highlights</small>
        </div>
        <div class="collection-video3">
          <img src="https://picsum.photos/50/50" alt="" class="img-fluid rounded-circle border p-1">
          <small class="d-block">Highlights</small>
        </div>
        <div class="collection-video4">
          <img src="https://picsum.photos/50/50" alt="" class="img-fluid rounded-circle border p-1">
          <small class="d-block">Highlights</small>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="border-bottom py-2"></div>


<div class="overflow-hidden">
  <nav class="py-3">
    <div class="nav nav-tabs d-flex w-100" id="nav-tab" role="tablist">
      <a class="nav-link flex-grow-1 text-center active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab"
        aria-controls="nav-home" aria-selected="true"><i class="fas fa-border-all"></i></a>
      <a class="nav-link flex-grow-1 text-center" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab"
        aria-controls="nav-profile" aria-selected="false"><i class="far fa-id-badge"></i></a>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="form-row">
        <% @user.posts.each do |user| %>
        <div class="col-4 pr-0 pb-1">
          <a href="<%= post_path(user.id) %>">
            <div class="photo h-100">
              <img src="<%= user.image %>" alt="" class="w-100 h-100">
            </div>
          </a>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
