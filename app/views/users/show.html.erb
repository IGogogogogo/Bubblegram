<div class="post-load-page" style="overflow: auto; height: 100vh;">
  <h1>User Show</h1>

  <div style="display: flex; text-align: center">
    <div>
      <%= image_tag @user.avatar.url, width: "50px", style: "border-radius: 50%" if @user.avatar.present? %>
    </div>

    <div>
      <%= link_to user_posts_path(@user) do %>
        <p><%= @user.posts_count %></p>
        <p>貼文</p>
      <% end %>
    </div>

    <div>
      <%= link_to fans_user_path(@user) do %>
        <p><%= @user.fans_count %></p>
        <p>粉絲</p>
      <% end %>
    </div>

    <div>
      <%= link_to followings_user_path(@user) do %>
        <p><%= @user.followings_count %></p>
        <p>追蹤中</p>
      <% end %>
    </div>
  </div>

  <div>
    <p><%= @user.nick_name %></p>
    <p><%= @user.email %></p>
    <p><%= @user.description %></p>
  </div>

  <div class="user-item-<%= @user.id %>">
    <%= render "user_btn", user: @user  %>
  </div>

  <div>
    <ul class="nav nav-tabs posts-nav">
      <li class="nav-item">
        <a class="nav-link my-posts-btn active" href="#">使用者貼文</a>
      </li>
      <li class="nav-item">
        <a class="nav-link tag-posts-btn" href="#">使用者被標記貼文</a>
      </li>
    </ul>
    <br>

    <div class="post-load-target">
      <div class="post-img row no-gutters w-100" style="display: flex;">
        <%= render partial: "/posts/post_img", collection: @my_posts, as: :post %>
        <%= render "/shared/loading" %>
      </div>

      <div class="tag-img row no-gutters w-100" style="display: none;">
        <%= render partial: "/posts/post_img", collection: @taged_posts, as: :post %>
        <%= render "/shared/loading" %>
      </div>
    </div>
  </div>
</div>
